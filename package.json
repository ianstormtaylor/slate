{
  "private": true,
  "name": "slate-packages",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn build:rollup && yarn build:next",
    "build:next": "cd ./site && next build",
    "build:production": "cross-env NODE_ENV=production yarn build",
    "build:rollup": "rollup --config ./config/rollup/rollup.config.js",
    "clean": "rm -rf ./node_modules ./packages/*/{dist,lib,node_modules} ./site/.next",
    "fix": "yarn fix:prettier",
    "fix:prettier": "yarn lint:prettier --write",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint '**/*.{js,jsx,ts,tsx}'",
    "lint:prettier": "prettier --list-different '**/*.{css,md,js,jsx,json,ts,tsx}'",
    "open": "open http://localhost:8080",
    "release": "yarn build:production && yarn test && yarn lint && lerna publish",
    "serve": "cd ./site && next",
    "start": "npm-run-all --parallel --print-label watch server",
    "test": "cross-env BABEL_ENV=test FORBID_WARNINGS=true mocha --require ./config/babel/register ./packages/*/test/index.js",
    "test:debug": "cross-env BABEL_ENV=test FORBID_WARNINGS=true mocha debug --require ./config/babel/register ./packages/*/test/index.js",
    "watch": "yarn build --watch"
  },
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-react": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@babel/runtime": "^7.6.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.12",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-eslint": "^8.2.1",
    "babel-plugin-dev-expression": "^0.2.2",
    "babel-plugin-module-resolver": "^3.1.1",
    "cross-env": "^5.1.3",
    "emotion": "^10.0.9",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "faker": "^3.1.0",
    "image-extensions": "^1.1.0",
    "is-hotkey": "^0.1.4",
    "is-url": "^1.2.2",
    "lerna": "^3.18.3",
    "lodash": "^4.17.4",
    "mocha": "^6.2.0",
    "next": "^9.1.2",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.19.1",
    "prismjs": "^1.5.1",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-error-boundary": "^1.2.5",
    "react-router-dom": "^4.3.1",
    "react-values": "^0.3.0",
    "rollup": "^1.23.1",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript2": "^0.24.3",
    "rollup-plugin-uglify": "^6.0.3",
    "slate": "^0.47.8",
    "slate-history": "^0.47.8",
    "slate-hyperscript": "^0.13.8",
    "slate-react": "^0.22.9",
    "slate-schema": "^0.47.8",
    "typescript": "^3.6.4"
  }
}
