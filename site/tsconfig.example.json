{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "rootDir": "./examples/ts",
    "outDir": "./examples/js"
  },
  "include": ["examples/ts/**/*.ts", "examples/ts/**/*.tsx"]
}
